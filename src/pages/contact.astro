---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Bangalore Tourism | Contact">
  <section class="container py-5" style="max-width: 700px;">
    <h1 class="h3 fw-bold mb-4 text-center text-primary">Contact Us</h1>

    <p class="text-center text-muted mb-4">
      Have questions about visiting Bangalore? We'd love to hear from you!
    </p>

    <form
      class="p-4 rounded-4 shadow-lg"
      style="
        background: white;
        border: 1px solid #ddd;
      "
    >
      <div class="mb-3">
        <label class="form-label fw-semibold text-dark">Name</label>
        <input
          type="text"
          class="form-control"
          style="
            background: #f8f9fa;
            border: 1px solid #ccc;
            border-radius: 10px;
          "
        />
      </div>

      <div class="mb-3">
        <label class="form-label fw-semibold text-dark">Email</label>
        <input
          type="email"
          class="form-control"
          style="
            background: #f8f9fa;
            border: 1px solid #ccc;
            border-radius: 10px;
          "
        />
      </div>

      <div class="mb-3">
        <label class="form-label fw-semibold text-dark">Message</label>
        <textarea
          rows="4"
          class="form-control"
          style="
            background: #f8f9fa;
            border: 1px solid #ccc;
            border-radius: 10px;
          "
        ></textarea>
      </div>

      <button
        type="submit"
        class="btn w-100 py-2 fw-bold"
        style="
          border-radius: 10px;
          background: #0d6efd;
          color: white;
          font-size: 1rem;
        "
      >
        Submit
      </button>
    </form>
  </section>
</MainLayout>
