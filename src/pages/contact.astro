---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Bangalore Tourism | Contact">
  <section class="container py-5" style="max-width: 700px;">
    <h1 class="h3 fw-bold mb-4 text-center text-info">Contact Us</h1>
    <p class="text-center text-light-50 mb-4">
      Have questions about visiting Bangalore? Send us a message.
    </p>

    <form class="bg-secondary p-4 rounded-3 shadow">
      <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control bg-dark text-light border-0" />
      </div>

      <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control bg-dark text-light border-0" />
      </div>

      <div class="mb-3">
        <label class="form-label">Message</label>
        <textarea
          rows="4"
          class="form-control bg-dark text-light border-0"
        ></textarea>
      </div>

      <button type="submit" class="btn btn-light w-100">
        Submit
      </button>
    </form>
  </section>
</MainLayout>